<div class="blog-post <%= blog_post.published ? '' : 'hidden' %>">
  <div class="blog-post-header">
    <%= blog_post.title %>
    <div class="blog-post-date"><%= convert_time_string blog_post.created_at %></div>     
  </div>
  <div class="blog-post-body">
    <%= markdown blog_post.body %><br>
  </div>
  <div class="blog-post-actions">
    <%= link_to "View full post", blog_post %>
    <% if admin? %>
      <%= link_to "edit", edit_blog_post_path(blog_post) %>
      <%= link_to "delete", blog_post, 
                :method => "delete", 
                :confirm => "Are you sure you want to delete this news post", 
                :delete => "Delete News Post?" %>
    <% end %>
  </div>
  <div class="clear-floats"></div>
</div>