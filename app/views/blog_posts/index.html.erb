<div id="blog-posts-index">
  <div class="container">
    <div class='blog-title'>THE BITESITE BLOG</div>

    <% if can? :new, BlogPost %>
      <div class="index-actions">
        <%= link_to 'New Blog post', new_blog_post_path %> <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
      </div>
    <% end %>

    <div class="blog-content">
      <%= render @blog_posts %>

      <%= will_paginate @blog_posts %>
    </div>
    <div class="blog-menu">
      <div class='menu-title'>
        Most Popular Tags
      </div>
      <div class='menu-links'>
        <% ActsAsTaggableOn::Tag.most_used(10).each do |tag| %>
          <%= link_to tag.name, blog_posts_path(tag_name: tag.name), class: 'menu-link' %>
        <% end %>
      </div>
      <div class='menu-title'>
        Contact us
      </div>
      <div class='contact'>
        @bitesite<br>
        info@bitesite.ca<br>
        www.bitesite.ca
      </div>
    </div>
    <div class="clear"></div>

  </div>
</div>