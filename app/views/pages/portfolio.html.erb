  <h1>BiteSite Archives</h1>

  <div class="archived-featured-work">
    <h2>Featured Work Archives</h2>
    <div class="featured-work-listings">
      <%= link_to image_tag("featured_work_tiles/featured_lspark_tile.jpg", class: "featured-work-listing"), lspark_path %>
      <%= link_to image_tag("featured_work_tiles/featured_international_safety_tile.jpg", class: "featured-work-listing"), international_safety_path %>
      <%= link_to image_tag("featured_work_tiles/featured_curtiss_wright_tile.jpg", class: "featured-work-listing"), curtiss_wright_path %>
      <%= link_to image_tag("featured_work_tiles/featured_mydoma_tile.jpg", class: "featured-work-listing"), mydoma_path %>
      <%= link_to image_tag("featured_work_tiles/featured_lspark_grad_tile.jpg", class: "featured-work-listing"), lspark_grad_path %>
      <%= link_to image_tag("featured_work_tiles/featured_filefacets_tile.jpg", class: "featured-work-listing"), filefacets_path %>
      <%= link_to image_tag("featured_work_tiles/featured_ewa_tile.jpg", class: "featured-work-listing"), ewa_path %>
      <%= link_to image_tag("featured_work_tiles/featured_martello_tile.jpg", class: "featured-work-listing"), martello_path %>
      <%= link_to image_tag("featured_work_tiles/featured_splice_tile.jpg", class: "featured-work-listing"), splice_path %>
      <%= link_to image_tag("featured_work_tiles/featured_d3m_tile.jpg", class: "featured-work-listing"), d3m_path %>
      <%= link_to image_tag("featured_work_tiles/featured_christine_kelly_tile.jpg", class: "featured-work-listing"), christine_kelly_path %>
      <%= link_to image_tag("featured_work_tiles/featured_solink_tile.jpg", class: "featured-work-listing"), solink_path %>
    </div>
  </div>

  <div class="portfolio-section">
    <h2>Web</h2>

    <% WebListing.sorted.each do |web_listing| %>
      <%= link_to web_listing.name, web_listing.url, class: "portfolio-listing" %>
    <% end %>
    <div class="clear"></div>
  </div>

  <div class="portfolio-section">
    <h2>Video</h2>
    <div class="video-listings">
      <% VideoListing.all.each do |video| %>
        <%= link_to video.name, video.link, class: "portfolio-listing", target: "_blank" %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="portfolio-section">
    <h2>Mobile</h2>
    <%= link_to "Fallowfield", "https://itunes.apple.com/ca/app/fallowfield/id1211828192?mt=8", target: "_blank", class: "portfolio-listing" %>
    <%= link_to "ESD Poutine (no longer active)", "#", target: "_blank", class: "portfolio-listing" %>
    <%= link_to "CNTDWN (no longer active)", "#", target: "_blank", class: "portfolio-listing" %>
    <div class="clear"></div>
  </div>

  <div class="clear"></div>
</div>