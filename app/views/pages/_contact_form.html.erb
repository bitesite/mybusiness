<div class="contact-form">
  <%= form_tag "/contact" do %>
    <div class="field">
      <%= text_field_tag :first_name, nil, placeholder: 'first name', class: "contact-field" %>
    </div>
    <div class="field">
      <%= text_field_tag :last_name, nil, placeholder: 'last name', class: "contact-field" %>
    </div>
    <div class="field">
      <%= text_field_tag :email_address, nil, placeholder: 'email', class: "contact-field" %>
    </div>
    <div class="field">
      <%= text_area_tag :message, nil, rows: 10, placeholder: 'message', class: "contact-field" %>
    </div>
    <div class="actions">
      <%= link_to "Submit", "#", :id => "contact-submit", class: "contact-submit" %>
      
      <div class="contact-submit-info" id="contact-submit-info"></div>
    </div>
  <% end %>
</div>