  <div class="hero-banner">
    <div class="container">
      <%= image_tag "logo2015-white-500x108.png", class: 'logo' %>
      <div class='slogan'>
        Great video doesn’t need $10,000 Cameras.
      </div>
    </div>
  </div>
  <div class="main-body">

    <div class="container">
      <div class="video-container">
        <iframe width="100%" 
                height="315" 
                src="https://www.youtube.com/embed/HDe1H_rKrPo" 
