<%= form_for(@profile, url: profile_path) do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :job_title %>
    <%= f.text_field :job_title %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Profile Picture (optimal 400x400px)" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :employee_number %>
    <%= f.text_field :employee_number %>
  </div>

  <div class="field">
    <%= f.label :weekly_billable_hours_target %>
    <%= f.text_field :weekly_billable_hours_target %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>